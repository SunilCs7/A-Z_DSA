#include <iostream>

using namespace std;

int main() {
    // Declaring an array of integers with a fixed size
    const int SIZE = 5;
    int numbers[SIZE];

    // Initializing the array elements
    cout << "Enter " << SIZE << " numbers:" << endl;
    for (int i = 0; i < SIZE; i++) {
        cin >> numbers[i];
    }

    // Displaying the array elements
    cout << "The numbers you entered are:" << endl;
    for (int i = 0; i < SIZE; i++) {
        cout << numbers[i] << " ";
    }
    cout << endl;

    return 0;
}
